{
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["ES5","ES2015","ES2016","DOM","ESNext"],
    "types": ["node"],
    "module": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./dist/esm",
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "importHelpers": true,
    "rootDir": "./src",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
  },
  
}